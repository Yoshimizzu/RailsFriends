
<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
    <%= @friend.email %>  | 
    <%= @friend.phone %>  |  
    <%= @friend.instagram %>

  </p>

  <br/>
  
  <div>
  <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %> 
  <%= link_to "Back to friends", friends_path, class:"btn btn-dark" %>
  </div>
  
  <br/>
  <div>
  <%= button_to "Delete", @friend , form: { data: {turbo_confirm: 'Are you sure?'}}, method: :delete, class:"btn btn-danger" %>
  </div>

</div>
